<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.auth.LoginFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/woman_traveling"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="@dimen/tatsi_50dp"
                android:layout_marginRight="@dimen/tatsi_50dp"
                android:layout_marginTop="@dimen/tatsi_50dp"
                android:layout_marginBottom="@dimen/tatsi_50dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_layout"
                    android:alpha="0.3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tatsi_75dp"
                        android:src="@drawable/ic_person"
                        android:layout_marginTop="@dimen/tatsi_10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tatsi_register"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="@dimen/tatsi_18sp"
                        android:layout_marginBottom="@dimen/tatsi_15dp"
                        tools:text="RegÃ­strate" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tatsi_txtl_first_name_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/tatsi_30dp"
                        android:layout_marginRight="@dimen/tatsi_30dp"
                        app:startIconDrawable="@drawable/ic_person_sm"
                        app:startIconTint="@color/white"
                        android:textColorHint="@color/white" >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tatsi_txt_first_name_register"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/tatsi_first_name"
                            android:inputType="textEmailAddress"
                            android:textSize="@dimen/tatsi_13sp"
                            android:textColor="@color/white" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tatsi_txtl_last_name_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/tatsi_30dp"
                        android:layout_marginRight="@dimen/tatsi_30dp"
                        app:startIconDrawable="@drawable/ic_person_sm_outlined"
                        app:startIconTint="@color/white"
                        android:textColorHint="@color/white" >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tatsi_txt_last_name_register"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/tatsi_last_name"
                            android:inputType="textEmailAddress"
                            android:textSize="@dimen/tatsi_13sp"
                            android:textColor="@color/white" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tatsi_txtl_phone_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/tatsi_30dp"
                        android:layout_marginRight="@dimen/tatsi_30dp"
                        app:startIconDrawable="@drawable/ic_phone"
                        app:startIconTint="@color/white"
                        android:textColorHint="@color/white" >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tatsi_txt_phone_register"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/tatsi_phone"
                            android:inputType="textEmailAddress"
                            android:textSize="@dimen/tatsi_13sp"
                            android:textColor="@color/white" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tatsi_txtl_email_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/tatsi_30dp"
                        android:layout_marginRight="@dimen/tatsi_30dp"
                        app:startIconDrawable="@drawable/ic_email"
                        app:startIconTint="@color/white"
                        android:textColorHint="@color/white" >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tatsi_txt_email_register"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/tatsi_email"
                            android:inputType="textEmailAddress"
                            android:textSize="@dimen/tatsi_13sp"
                            android:textColor="@color/white" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tatsi_txtl_password_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/tatsi_30dp"
                        android:layout_marginRight="@dimen/tatsi_30dp"
                        app:startIconDrawable="@drawable/ic_lock"
                        app:startIconTint="@color/white"
                        android:textColorHint="@color/white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tatsi_txt_password_register"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/tatsi_password"
                            android:inputType="textPassword"
                            android:textSize="@dimen/tatsi_13sp"
                            android:textColor="@color/white" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tatsi_txtl_password_confirm_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/tatsi_30dp"
                        android:layout_marginRight="@dimen/tatsi_30dp"
                        app:startIconDrawable="@drawable/ic_lock"
                        app:startIconTint="@color/white"
                        android:textColorHint="@color/white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tatsi_txt_password_confirm_register"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/tatsi_password_confirm"
                            android:inputType="textPassword"
                            android:textSize="@dimen/tatsi_13sp"
                            android:textColor="@color/white" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/tatsi_btn_register_submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tatsi_register"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/tatsi_30dp"
                        android:layout_marginRight="@dimen/tatsi_30dp"
                        android:layout_marginTop="@dimen/tatsi_30dp"
                        android:layout_marginBottom="@dimen/tatsi_15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <View
                            android:layout_width="@dimen/tatsi_70dp"
                            android:layout_height="@dimen/tatsi_1dp"
                            android:background="@color/white"
                            android:alpha="0.7" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tatsi_already_account_question"
                            android:textColor="@color/white"
                            android:layout_marginLeft="@dimen/tatsi_5dp"
                            android:layout_marginRight="@dimen/tatsi_5dp" />

                        <View
                            android:layout_width="@dimen/tatsi_70dp"
                            android:layout_height="@dimen/tatsi_1dp"
                            android:background="@color/white"
                            android:alpha="0.7" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/tatsi_btn_login_navigate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tatsi_login"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/tatsi_30dp"
                        android:layout_marginRight="@dimen/tatsi_30dp"
                        android:layout_marginTop="@dimen/tatsi_15dp"
                        android:layout_marginBottom="@dimen/tatsi_30dp" />
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
        
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>